{
  "tasks": {
    "dev": "deno run --check --watch --unstable-sloppy-imports --allow-env --allow-net src/main.ts"
  },
  "imports": {
    "@/": "./src/",
    "@std/assert": "jsr:@std/assert@1"
    "@nestjs/core": "npm:@nestjs/core",
    "@nestjs/common": "npm:@nestjs/common",
    "@nestjs/platform-express": "npm:@nestjs/platform-express"
  },
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
